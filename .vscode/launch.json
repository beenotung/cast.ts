  "version": "0.2.0",
  "configurations": [
    {
      "name": "ts-mocha",
      "type": "node",
      "request": "launch",
      "args": ["${relativeFile}"],
      "runtimeArgs": ["${file}"],
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/ts-mocha"
    }
  ]
}
